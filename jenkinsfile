pipeline {
    agent any

    triggers { 
        githubPush() 
    }

    environment {
    DOCKER_IMAGE_NAME = 'calculator'
    GITHUB_REPO_URL = 'https://github.com/swayam614/test_calculotr_mini_project.git'
    PATH = "/usr/local/bin:/opt/homebrew/bin:/bin:/usr/bin:/usr/sbin:/sbin"
    }


    stages {

        stage('Checkout') {
            steps {
                echo 'Cloning GitHub repository...'
                git branch: 'main', url: "${GITHUB_REPO_URL}"
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                script {
                    docker.build("${DOCKER_IMAGE_NAME}", ".")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                echo 'Logging into Docker Hub...'
                withCredentials([usernamePassword(
                    credentialsId: 'DockerHubCred',
                    usernameVariable: 'swayam614',
                    passwordVariable: 'Swayam@9083'
                    )]) {
                        sh '''
                        docker login -u $DOCKER_USER -p $DOCKER_PASS
                        docker tag calculator swayam614/calculator:latest
                        docker push swayam614/calculator:latest
                        '''
                    }
                }
            }
        }


        stage('Run Ansible Playbook') {
            steps {
                echo 'Running Ansible playbook...'
                ansiblePlaybook(
                    playbook: 'deploy.yml',
                    inventory: 'inventory'
                )
            }
        }
    }
}
